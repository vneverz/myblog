<h1>this is show template <%= params[:id] %> <%= link_to "back", posts_path %></h1>

<p><%= @post.title %></p>
<p><%= @post.body %></p>
<p><%= link_to "edit", edit_post_path %> |
       <%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this posts?"} %>

</p>
<h2>All Comment:</h2>

<%= render @post.comments.order("created_at DESC") %>
<h2>Leave a Comment:</h2>

<%= form_for [@post, @post.comments.build] do |f|%>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.submit %>
<% end %>


