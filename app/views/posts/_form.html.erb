<div class="form">

  <% if @post.errors.any? %>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <%= form_for @post do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>

    <%= f.label :body %><br>
    <%= f.text_area :body %><br>

    <%= f.submit %>

  <% end %>

</div>